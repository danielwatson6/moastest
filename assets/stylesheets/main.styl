//= require_tree ./vendor

// Header

.moas-header
  background-color #f00
  color #fff
  padding-top 25px
  padding-bottom 25px
  
  img
    width 180px
    height auto
    margin-right 40px
  
  a:hover 
    background-color #f00
  
  .media-body
    padding-left 40px
    border-left 1px solid #fff

.navbar-nav.nav-justified li
  float none

// Footer

html
  position relative
  min-height 100%

body
  margin-bottom 140px

.moas-footer
  position absolute
  bottom 0
  width 100%
  height 140px
  padding-top 20px
  padding-bottom 20px
  color #777
  border-top 1px solid #ddd
  background-color #f6f6f6
  a
    color #999

// Homepage

.carousel-wrap
  border-radius 5px
  padding 10px
  background-color #f6f6f6
  border 1px solid #ddd
  margin-bottom 40px

.carousel
  width 100%
  max-width 960px   // image sizes are 960x480px
  margin-left auto
  margin-right auto

// Static views

.schedule table
  margin-bottom 40px

img.the-view
  width 100%

// Committees

.nav-pills
  a
    color #555
  li.active a, li.active a:hover
    color #fff
    background-color #d9534f
    border-color #d43f3a

.chair-pic
  &:first-child img
    float left
  img
    margin 10px
    margin-left 0
    max-width 45%
